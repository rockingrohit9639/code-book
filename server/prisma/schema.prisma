generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

enum Gender {
  MALE
  FEMALE
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  firstName String?
  lastName  String?
  role      UserRole  @default(USER)
  mobile    Int?
  username  String    @unique
  gender    Gender?
  bio       String?
  dob       DateTime?
  website   String?
  github    String?
  linkedin  String?
  password  String
  salt      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  files     File[]
}

model File {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  createdBy    User   @relation(fields: [createdById], references: [id], onDelete: Cascade)
  createdById  String @db.ObjectId
  originalName String
  encoding     String
  mimeType     String
  filename     String
  size         Int
}
